<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keepcalm"
    android:orientation="vertical"
    tools:context=".MainActivityActivity" >
    
    <EditText
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter your Message here(default: help me!)"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_weight="30" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_weight="50"
    android:layout_height="0dp"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All Contacts" 
            android:layout_gravity="right"/>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    
    </LinearLayout>
    <ImageView
        
        android:id="@+id/addPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="2dp"
        android:singleLine="true"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_send">
    </ImageView>
    
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:gravity="center"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/tvGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center"
            android:text="Send GPS location"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:attr/textColorPrimary" />

        <CheckBox
            android:id="@+id/checkBoxGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/btn_gray"
        android:singleLine="true"
        android:layout_weight="1"
        android:text="Send" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/btn_gray"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="Save and Exit" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:background="@drawable/bottom_bar" >
        
        <ImageView
            android:id="@+id/imageInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:padding="4dp"
            android:src="@drawable/ic_instructions" />
        <ImageView
            android:id="@+id/imageAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:padding="4dp"
            android:src="@drawable/ic_about_us" />
    </LinearLayout>

</LinearLayout>